{% extends 'base.html.twig' %}

{% block title %}
    Show Food
{% endblock title %}

{% block body %}

<div>
    <h1>
    Food Name: {{food.Description}}
    </h1>
    <div >
        <p>
        Author: {{food.User.email}}
        </p>
        <p>
        Restaurant: {{food.Restaurant}}
        </p>
        <p>
        Food Category: {{food.FoodCategory}}
        </p>
        <p>
        Serving Size: {{food.ServingSize}}
        </p>
        <p>
        Serving Size Unit: {{food.ServingSizeUnit}}
        </p>
        <p>
        Energy Amount: {{food.EnergyAmount}}
        </p>
        <p>
        Energy Amount Unit: KCAL
        </p>
        <p>
        Fat Amount: {{food.FatAmount}}
        </p>
        <p>
        Fat Amount Unit: G
        </p>
        <p>
        Carb Amount: {{food.CarbAmount}}
        </p>
        <p>
        Carb Amount Unit: G
        </p>
        <p>
        Protein Amount: {{food.ProteinAmount}}
        </p>
        <p>
        Protein Amount Unit: G
        </p>

        </div>
        <div>
        <a href = "/food/edit/{{food.id}}">
            Edit
        </a>
    </div>
</div>

{% endblock body %}